@model IEnumerable<exm.Models.Todo>

@{
    ViewData["Title"] = "Todo List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.todo)</th>
            <th>@Html.DisplayNameFor(model => model.completed)</th>
            <th>@Html.DisplayNameFor(model => model.userId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.id)</td>
                    <td>@Html.DisplayFor(modelItem => item.todo)</td>
                    <td>@Html.DisplayFor(modelItem => item.completed)</td>
                    <td>@Html.DisplayFor(modelItem => item.userId)</td>
                    <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
        }
    </tbody>
</table>
